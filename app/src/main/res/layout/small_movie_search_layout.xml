<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/popup_shape"
    android:paddingRight="3dp"
    android:paddingTop="20dp"
    android:layout_marginBottom="20dp"
    android:paddingBottom="20dp"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/smallMovieSearchPoster"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="Фильм фильм фильм"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_toRightOf="@id/smallMovieSearchPoster"
        android:id="@+id/smallMovieSearchTitle"/>

    <TextView
        android:id="@+id/smallMovieSearchYear"
        android:layout_width="wrap_content"
        android:layout_below="@id/smallMovieSearchTitle"
        android:layout_marginTop="30dp"
        android:text="12312"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/smallMovieSearchPoster"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/smallMovieSearchYear"
        android:layout_toRightOf="@id/smallMovieSearchPoster"
        android:text="movie"/>

</RelativeLayout>